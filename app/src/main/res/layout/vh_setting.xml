<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vh_settings_row_height">

    <EditText
        android:id="@+id/value"
        android:layout_width="@dimen/vh_settings_row_height"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/vh_settings_editText_textSize"
        android:gravity="center"
        android:inputType="numberSigned"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/value"
        android:layout_toStartOf="@id/value"
        android:padding="@dimen/vh_settings_row_padding"
        android:gravity="center|start"/>
</RelativeLayout>
